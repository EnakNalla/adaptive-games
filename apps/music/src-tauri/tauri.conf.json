{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build && pnpm export",
    "beforeDevCommand": "pnpm next-dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "AdaptiveGames-Music",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "dialog": {
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/icon.png", "icons/icon.svg"],
      "identifier": "github.com.EnakNalla.AdaptiveGames-Music",
      "longDescription": "Music app with visualiser controlled by Switch/Eye gaze/Touch",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Adaptive Games Music",
        "width": 800
      }
    ]
  }
}
