{
  "name": "adaptive-games",
  "version": "1.0.0",
  "description": "A collection of apps designed for eye gaze/switch access",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "pnpm db:generate",
    "prepare": "husky install",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write **/*.{ts,tsx,md,js,mjs,cjs,json}",
    "lint": "eslint . --ext .ts,.tsx",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "dev": "turbo dev"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=7.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "engineStrict": true,
  "packageManager": "pnpm@7.24.3",
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "commitlint-config-monorepo": "^2.0.2",
    "eslint": "^8.37.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.8.8",
    "eslint-plugin-astro": "^0.26.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "prettier-plugin-astro": "^0.8.0",
    "turbo": "^1.8.8",
    "typescript": "^5.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx,md,js,mjs,cjs,json,astro}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
